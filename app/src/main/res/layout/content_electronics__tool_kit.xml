<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27002b"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Electronics_ToolKit"
    tools:showIn="@layout/app_bar_electronics__tool_kit">

    <ImageButton
        android:id="@+id/image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Electronic Components"
        android:background="@drawable/style"
        android:textStyle="italic"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/electronicscomponents"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK ON THE IMAGE BELOW TO KNOW MORE ABOUT COMPONENTS"
        android:textColor="#ffff"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/image_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:layout_marginTop="150dp"/>

</android.support.constraint.ConstraintLayout>